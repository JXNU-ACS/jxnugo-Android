<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/personal_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/personal_bg_image"
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:src="@color/colorPrimary"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/personal_avater"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:src="@mipmap/cheese_1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="96dp"/>

    </FrameLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/username_personal"
            style="@style/TextPrimaryStyle"
            android:text="USERNAME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/user_manager_personal"
            android:layout_marginTop="10dp"
            style="@style/TextPrimaryStyle"
            android:text="@string/login_or_registe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/personal_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>