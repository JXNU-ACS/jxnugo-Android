<resources>
    <style name="ConfirmButton" parent="android:Widget.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="TextPrimaryStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextSecondaryStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="MyCardView" parent="android:Widget">
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AppTheme" parent="BaseTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
